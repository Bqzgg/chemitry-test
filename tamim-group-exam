    <script>
        let currentQuestion = 1;
        const totalQuestions = 35;
        let score = 0;
        let userAnswers = new Array(totalQuestions).fill(null);

        document.addEventListener('DOMContentLoaded', function() {
            updateProgress();
            initializeEventListeners();
        });

        function updateProgress() {
            const progress = document.getElementById('progress');
            const percentage = ((currentQuestion - 1) / totalQuestions) * 100;
            progress.style.width = percentage + '%';
        }

        function initializeEventListeners() {
            document.querySelectorAll('.option').forEach(option => {
                option.addEventListener('click', handleOptionClick);
            });

            for (let i = 1; i <= totalQuestions; i++) {
                const nextBtn = document.getElementById(`next${i}`);
                const prevBtn = document.getElementById(`prev${i}`);
                
                if (nextBtn) {
                    nextBtn.addEventListener('click', () => navigateToQuestion(i + 1));
                }
                if (prevBtn) {
                    prevBtn.addEventListener('click', () => navigateToQuestion(i - 1));
                }
            }

            document.getElementById('restart').addEventListener('click', restartQuiz);
        }

        function handleOptionClick(event) {
            const option = event.currentTarget;
            const questionContainer = option.closest('.question-container');
            const options = questionContainer.querySelectorAll('.option');
            const feedbackCorrect = questionContainer.querySelector('.feedback.correct');
            const feedbackIncorrect = questionContainer.querySelector('.feedback.incorrect');
            const nextButton = questionContainer.querySelector('button:disabled');
            const questionId = parseInt(questionContainer.id.replace('question', ''));

            options.forEach(opt => {
                opt.classList.remove('selected', 'correct', 'incorrect');
            });

            option.classList.add('selected');

            const isCorrect = option.getAttribute('data-correct') === 'true';
            
            if (isCorrect) {
                option.classList.add('correct');
                feedbackCorrect.style.display = 'block';
                feedbackIncorrect.style.display = 'none';
                if (userAnswers[questionId - 1] === null) {
                    score++;
                }
            } else {
                option.classList.add('incorrect');
                feedbackIncorrect.style.display = 'block';
                feedbackCorrect.style.display = 'none';
                
                const correctOption = questionContainer.querySelector('.option[data-correct="true"]');
                correctOption.classList.add('correct');
            }

            userAnswers[questionId - 1] = isCorrect;

            if (nextButton) {
                nextButton.disabled = false;
            }
        }

        function navigateToQuestion(questionNumber) {
            if (questionNumber < 1 || questionNumber > totalQuestions + 1) return;

            document.getElementById(`question${currentQuestion}`).classList.remove('active');

            if (questionNumber === totalQuestions + 1) {
                showResults();
            } else {
                currentQuestion = questionNumber;
                document.getElementById(`question${currentQuestion}`).classList.add('active');
                updateProgress();
            }
        }

        function showResults() {
            document.getElementById('results').classList.add('active');
            document.getElementById('finalScore').textContent = `${score}/${totalQuestions}`;
            
            const percentage = (score / totalQuestions) * 100;
            let grade, finalGrade;
            
            if (percentage >= 90) {
                grade = 'امتياز';
                finalGrade = 'A+';
            } else if (percentage >= 80) {
                grade = 'جيد جداً';
                finalGrade = 'A';
            } else if (percentage >= 70) {
                grade = 'جيد';
                finalGrade = 'B';
            } else if (percentage >= 60) {
                grade = 'مقبول';
                finalGrade = 'C';
            } else {
                grade = 'راسب';
                finalGrade = 'F';
            }
            
            document.getElementById('grade').textContent = `التقدير: ${grade}`;
            document.getElementById('finalGrade').textContent = finalGrade;
            document.getElementById('finalRating').textContent = grade;
        }

        function restartQuiz() {
            score = 0;
            currentQuestion = 1;
            userAnswers.fill(null);
            
            document.querySelectorAll('.question-container').forEach(container => {
                container.classList.remove('active');
                container.querySelectorAll('.option').forEach(option => {
                    option.classList.remove('selected', 'correct', 'incorrect');
                });
                container.querySelectorAll('.feedback').forEach(feedback => {
                    feedback.style.display = 'none';
                });
                container.querySelectorAll('button').forEach(button => {
                    if (button.id.startsWith('next')) {
                        button.disabled = true;
                    }
                });
            });
            
            document.getElementById('results').classList.remove('active');
            document.getElementById('question1').classList.add('active');
            updateProgress();
        }
    </script>
</body>
</html>
